<!-- Page body -->
<div class="container my-5">
    <div class="row justify-content-center">
        <h1 class="text-center my-5 header-color">Post a Job</h1>
    </div>
    <div class="row justify-content-center">

        <div class="col-lg-10 col-md-10">
            <div class="card">
                <hr>
                <!-- Create Posting form -->
                <div class="card-body">
                    <form class="clearfix mb-4" action="POST">
                        <h2>Create a Posting</h2>
                        <div class="form-group">
                            <label for="posting-title">Job Title</label>
                            <input type="text" id="posting-title" class="form-control" aria-describedby="posting-title" placeholder="Enter Job Title">
                        </div>

                        <div class="form-group">
                            <label for="posting-description">Job Description</label>
                            <textarea class="form-control" id="posting-description" aria-describedby="posting-description" placeholder="Enter Job Description"
                                rows=20></textarea>
                        </div>

                        <div class="form-group">
                            <label for="posting-employer">Employer</label>
                            <input type="text" id="posting-employer" class="form-control" aria-describedby="posting-employer" placeholder="Enter Employer Name">
                        </div>

                        <div class="form-group">
                            <label for="posting-location">Location</label>
                            <input type="text" id="posting-location" class="form-control" aria-describedby="posting-location" placeholder="e.g. Toronto, ON">
                        </div>

                        <div class="form-group">
                            <label for="posting-salary">Salary (Optional)</label>
                            <input type="text" id="posting-salary" class="form-control" aria-describedby="posting-salary" placeholder="e.g. $500/day">
                        </div>

                        <div class="form-group">
                            <label for="posting-availabilty">Availability (Optional)</label>
                            <input type="text" id="posting-availability" class="form-control" aria-describedby="posting-availability" placeholder="e.g. Part-time">
                        </div>

                        <button id="submit" class="btn btn-primary float-right">Submit</button>
                    </form>

                </div>
                <!-- End create posting form -->
            </div>
        </div>
    </div>
</div>
<!-- End page body -->



