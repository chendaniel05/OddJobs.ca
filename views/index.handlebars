<!-- The Jumbotron Area -->
<div id="jumbotron" class="jumbotron text-center">
  <br>
  <br>
  <br>
  <p class="lead jumbotron-title display-4 wow bounceInUp" data-wow-duration="1s" style="color: darkred">{{msg}}</p>
  <br>
  <p class="lead jumbotron-title display-4 wow bounceInDown" data-wow-duration="3s" style="color: darkred">Professional hub for all odd jobs</p>
  <br>
  <p class="lead">
    <!-- The home button -->
    <a href="" class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#loginModal">Login</a>
    <a href="" class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#registerModal">Register</a>
    <!-- End of the home button -->
  </p>
</div>
<!-- End of the jumbotron area -->

<!-- Featured Jobs section -->
<div class="container px-5 my-5">
  <h1 class="display-4 text-center my-5 wow fadeInDown" style="padding: 30px 0px;">
    <i class="ion ion-star"></i>
    Featured Jobs
  </h1>
  <br>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/img/dog-walker.jpg" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-white">Pet Walker</h5>
          <p class="text-white">Helping to walk others' pets for 1 hour a day!</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/moving company.jpeg" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-white">Move4U</h5>
          <p class="text-white">Movers needed urgently every weekend!</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/img/tutoring.jpeg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-white">Tutors Needed for Tutoring School</h5>
          <p class="text-white">Permanent positions in part-time schedule evenings and weekends.</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!-- End of Featured Jobs section -->

<!-- Job Listing Section -->
<div id="home">
  <div class="container px-5 my-5">
    <h1 class="display-4 text-center my-5 wow fadeInDown" style="padding: 30px 0px;">
      <i class="ion ion-person-stalker"></i>
      Find Your Perfect Odd Job</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 offset-2">
        <h2>Job Postings:</h2>
        <ul id="posting-list" class="list-group">
          {{#each postings}}
          <li data-id="{{this.id}}" class="list-group-item">
            <h5>
              <a href="posting/{{this.id}}">
                <i class="ion ion-briefcase"></i> {{this.title}}</a>
            </h5>
            <hr>
            <span class="text-muted">
              <i class="ion ion-android-contact"></i> Employer: {{this.employer}}
            </span>
            <span class="text-muted float-right">
              <i class="ion ion-android-pin"></i> Location: {{this.location}}
            </span>
            <br>
            <span class="text-muted">
              <i class="ion ion-cash"></i> Salary: {{this.salary}}
            </span>
            <br>
            <span class="text-muted">
              <i class="ion ion-clock"></i> Availability: {{this.availability}}
            </span>
          </li>
          {{/each}}
        </ul>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>
<!-- End of Job Listing Section -->


<!-- Post a Job Section -->
<div class="container px-5 my-5">
  <h1 class="display-4 text-center my-5 wow fadeInDown" style="padding: 30px 0px;">
    <i class="ion ion-person-stalker"></i>
    Post Your Odd Jobs Here</h1>
</div>

<div class="card-deck wow fadeIn" data-wow-duration="4s">
  <div class="card mb-3">
    <div class="card-body">
      <div class="text-center">
        <div class="row justify-content-center">
          <h1 class="text-center my-5 header-color">Sign in or Register to Post a Job</h1>
        </div>
        <!-- The home button -->
        <a href="" class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#loginModal">Login</a>
        <a href="" class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#registerModal">Register</a>
        <!-- End of the home button -->
      </div>
    </div>
  </div>
</div>
<!-- End Post a Job Section -->

<!--- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="padding-top: 70px;">
    <div class="modal-content">
      <div class="modal-body text-center">
        <div class="row justify-content-center">
          <div class="col-10">
            <h3 class="text-center mb-3 mt-3">Register</h3>
            <form class="signup">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="register-email-input" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="register-password-input" placeholder="Password">
              </div>
              <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                <span class="msg"></span>
              </div>
              <button class="btn mb-3 btn-primary form-control" type="submit">Register</button>
            </form>
            <br />
            <p>
              <span class="mt-5 h6 mr-3">
                <a href="" role="button" data-toggle="modal" data-target="#loginModal" data-dismiss="modal">Already have an account? Login Here</a>
              </span>
            </p>
          </div>
        </div>
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Example Text</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<!--- End of Register Modal -->


<!--- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="padding-top: 130px;">
    <div class="modal-content">
      <div class="modal-body text-center">
        <div class="row justify-content-center">
          <div class="col-10">
            <h3 class="text-center mb-3 mt-3">Login</h3>
            <form class="login">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="login-email-input" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="login-password-input" placeholder="Password">
              </div>
              <button class="btn mb-3 btn-primary form-control" type="submit">Login</button>
            </form>
            <br />
            <p>
              <span class="mt-5 h6 mr-3">
                <a href="" role="button" data-toggle="modal" data-target="#registerModal" data-dismiss="modal">No account? Register!</a>
              </span>
              <span class="mt-5 ml-2 h6">
                <a href="">Forgot your password?</a>
              </span>
            </p>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--- End of Login Modal -->


